%html
  %head
    %link{:href => url('/css/bootstrap.css'), :rel => "stylesheet"}
    %link{:href => url('/css/bootstrap-responsive.css'), :rel => "stylesheet"}
    - if request.url.include? "graph"
      %link{:href => url('/css/force.css'), :rel => "stylesheet"}
    %link{:rel=>"shortcut icon", :href =>url('/assets/ico/favicon.ico')}
    :css
      body { padding-top: 60px; }
    - if request.url.include? "graph"
      :css
        .node text {
          pointer-events: none;
          font: 10px sans-serif;
        }

  %body
    .navbar.navbar-inverse.navbar-fixed-top
      .navbar-inner
        .container
          %a{:class => "btn btn-navbar"}
            %span{:class => "icon-bar"}
            %span{:class => "icon-bar"}
            %span{:class => "icon-bar"}
          %a{:class => "brand", :href => url('/')} Google Voice Stats
          .nav-collapse.collapse
            %ul.nav
              %li
                %a{:href => url('/monthly')} Monthly
              %li
                %a{:href => url('/weekly')} Weekly
              %li
                %a{:href => url('/graph')} Graph
    .container
      #sidebar.span3
        %br
        %br
        %br
        .span1.pull-right
          .progress.progress-striped.active
            .bar{:style => "width: 50%;"}
      .span8
        .row
          = yield
    %script{:src => url('/js/jquery.js')}
    %script{:src => url('/js/bootstrap.js')}
    %script{:src => url('/js/bootstrap-transition.js')}
    %script{:src => url('/js/bootstrap-alert.js')}
    %script{:src => url('/js/bootstrap-modal.js')}
    %script{:src => url('/js/bootstrap-dropdown.js')}
    %script{:src => url('/js/bootstrap-scrollspy.js')}
    %script{:src => url('/js/bootstrap-tab.js')}
    %script{:src => url('/js/bootstrap-tooltip.js')}
    %script{:src => url('/js/bootstrap-popover.js')}
    %script{:src => url('/js/bootstrap-button.js')}
    %script{:src => url('/js/bootstrap-collapse.js')}
    %script{:src => url('/js/bootstrap-carousel.js')}
    %script{:src => url('/js/bootstrap-typeahead.js')}
    :javascript
      $('#sidebar').load('/people');
